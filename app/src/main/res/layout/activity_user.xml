<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user_activities.User"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kris 您好，欢迎回来！"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="6dp"
        android:textSize="16sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        android:id="@+id/returnback"
        android:layout_below="@+id/textView"
        android:layout_marginTop="450dp"
        android:onClick="back_to_login"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:background="#d95b5b"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看柜子"
        android:id="@+id/to_MainActivity"
        android:layout_below="@+id/textView"
        android:layout_marginTop="150dp"
        android:onClick="to_MainActivity_button"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="#535bcb"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>