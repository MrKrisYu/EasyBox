<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="20dp"
    android:gravity="center_vertical"
    android:background="@color/fragment_background">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/fragment_home_el_childitem_tv_box_sequence"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="编号："
                android:fontFamily="@font/gotham"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/fragment_home_el_childitem_tv_box_status"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/fragment_home_el_childitem_tv_box_sequence"
                android:layout_marginTop="10dp"
                android:text="快递箱状态："
                android:fontFamily="@font/gotham"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/fragment_home_el_childitem_imageView_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_home_el_childitem_tv_box_status"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp" />
            <Switch
                android:id="@+id/fragment_home_el_childitem_rb_switch"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="100dp"
                android:text="开关状态："
                android:fontFamily="@font/gotham"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/fragment_home_el_childitem_tv_status_of_bind"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="绑定状态："
                android:fontFamily="@font/gotham"
                android:textStyle="bold"
                android:background="@color/title_background"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>