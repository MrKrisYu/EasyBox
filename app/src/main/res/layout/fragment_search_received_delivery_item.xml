<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_background"
    android:paddingStart="@dimen/default_paddingStart"
    android:paddingEnd="@dimen/default_paddingEnd"
    android:paddingTop="@dimen/default_paddingTop"
    android:paddingBottom="@dimen/default_paddingBottom">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cardview_title_background">
                <TextView
                    android:id="@+id/receivedDeliveryItem_textView_BoxId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="柜子编号：3"
                    android:fontFamily="@font/gotham"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/tab_white"/>
                <TextView
                    android:id="@+id/receivedDeliveryItem_trackingNum"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@id/receivedDeliveryItem_textView_BoxId"
                    android:layout_marginTop="5dp"
                    android:paddingStart="@dimen/default_paddingStart"
                    android:paddingEnd="1dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/tab_white"
                    android:textStyle="bold"
                    android:text="订单号：170020546545644" />
                <TextView
                    android:id="@+id/receivedDeliveryItem_time"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@id/receivedDeliveryItem_trackingNum"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="@dimen/default_paddingStart"
                    android:paddingEnd="1dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/tab_white"
                    android:textStyle="bold"
                    android:text="下单时间： 2020年03月01日 23:46:50" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/receivedDeliveryItem_srcLocation"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginTop="35dp"
                    android:layout_toStartOf="@id/receivedDeliveryItem_arrowHead"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/gotham"
                    android:textStyle="italic"
                    android:textSize="24sp"
                    android:textColor="@color/tab_black"
                    android:text="温州市" />
                <TextView
                    android:id="@+id/receivedDeliveryItem_senderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receivedDeliveryItem_srcLocation"
                    android:layout_alignStart="@id/receivedDeliveryItem_srcLocation"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/gotham"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="余大帅"/>
                <ImageView
                    android:id="@+id/receivedDeliveryItem_arrowHead"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/single_arrow_right"
                    android:layout_marginStart="40dp"/>
                <TextView
                    android:id="@+id/receivedDeliveryItem_deliveryStatus"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/receivedDeliveryItem_arrowHead"
                    android:layout_alignBottom="@id/receivedDeliveryItem_senderName"
                    android:layout_alignStart="@id/receivedDeliveryItem_arrowHead"
                    android:fontFamily="@font/gotham"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:text="待取件"
                    android:gravity="bottom"/>
                <TextView
                    android:id="@+id/receivedDeliveryItem_desLocation"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="bottom"
                    android:layout_alignBottom="@id/receivedDeliveryItem_srcLocation"
                    android:layout_toEndOf="@id/receivedDeliveryItem_arrowHead"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/gotham"
                    android:textStyle="italic"
                    android:textSize="24sp"
                    android:textColor="@color/tab_black"
                    android:text="舟山市" />
                <TextView
                    android:id="@+id/receivedDeliveryItem_receiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_below="@id/receivedDeliveryItem_desLocation"
                    android:layout_alignBottom="@id/receivedDeliveryItem_senderName"
                    android:layout_alignStart="@id/receivedDeliveryItem_desLocation"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/receivedDeliveryItem_arrowHead"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gotham"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="王德酸"/>
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_below="@id/receivedDeliveryItem_senderName"
                    android:layout_marginTop="25dp"
                    android:background="@color/fragment_background"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/default_paddingStart"
                android:paddingEnd="@dimen/default_paddingEnd"
                android:paddingTop="@dimen/default_paddingTop"
                android:paddingBottom="@dimen/default_paddingBottom">
                <TextView
                    android:id="@+id/receivedDeliveryItem_thingsInfo"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/gotham"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:text="文件、数码产品 1kg"/>
                <TextView
                    android:id="@+id/receivedDeliveryItem_price"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/gotham"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/price_highlight_red"
                    android:text="合计：¥ 23"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/default_paddingStart"
                android:paddingEnd="@dimen/default_paddingEnd"
                android:paddingTop="@dimen/default_paddingTop"
                android:paddingBottom="@dimen/default_paddingBottom">
                <Button
                    android:id="@+id/receivedDeliveryItem_btn_confirmReceived"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_background2"
                    android:fontFamily="@font/gotham"
                    android:textSize="13sp"
                    android:textColor="@color/ReceivedDelivery_title_background"
                    android:text="确认收货" />
                <Button
                    android:id="@+id/receivedDeliveryItem_btn_trackLogistics"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toStartOf="@id/receivedDeliveryItem_btn_confirmReceived"
                    android:layout_marginEnd="@dimen/default_paddingEnd"
                    android:background="@drawable/button_backgournd"
                    android:fontFamily="@font/gotham"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_grey"
                    android:text="查看物流" />
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/receivedDeliveryItem_btn_more"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:drawableStart="@drawable/ellipsis" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>